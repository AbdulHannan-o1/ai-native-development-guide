{
  "version": 2,
  "installCommand": "pip install -r api/requirements.txt && pnpm install",
  "buildCommand": "pnpm build",
  "functions": {
    "api/src/main.py": {
      "runtime": "python3.10",
      "memory": 1024,
      "maxDuration": 10,
      "src": "api/src/main.py"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/src/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ],
  "outputDirectory": "build"
}